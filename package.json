{
  "name": "tailwind-colorize-plugin",
  "main": "dist/tailwind-colorize.umd.js",
  "module": "dist/tailwind-colorize.es.js",
  "version": "0.0.4",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "compile": "peggy src/grammar.pegjs --output ./grammar.js",
    "test": "jest --coverage",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage && jest-coverage-badges && npm run test:commit",
    "test:commit": "git add . && git commit -m 'New coverage report and badges.'"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.3.1",
    "postcss": "^8.4.19",
    "rollup-pluginutils": "^2.8.2",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.0",
    "vite-plugin-commonjs": "^0.5.3",
    "vite-plugin-string": "^1.1.2"
  },
  "dependencies": {
    "@types/color": "^3.0.3",
    "@types/lodash": "^4.14.188",
    "color": "^4.2.3",
    "lodash": "^4.4.0",
    "peggy": "^2.0.1"
  }
}
